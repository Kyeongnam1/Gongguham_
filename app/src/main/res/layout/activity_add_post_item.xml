<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/add_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목 입력"/>
        <EditText
            android:id="@+id/add_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="글 내용 입력"/>

        <EditText
            android:id="@+id/add_post_meeting_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="만날 장소 입력"/>
        <EditText
            android:id="@+id/add_post_close_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="약속 시간 입력"/>
        <EditText
            android:id="@+id/add_post_max_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="총 인원 입력"/>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>