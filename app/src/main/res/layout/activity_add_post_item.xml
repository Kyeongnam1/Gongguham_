<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="글쓰기"
                android:textColor="#000000"
                android:textSize="24sp" />


            <Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/round_button"
                android:text="완료" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목" />

            <EditText
                android:id="@+id/add_post_meeting_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="만날 장소" />

            <EditText
                android:id="@+id/add_post_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top"
                android:hint="내용을 입력하세요." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="만날 시간"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_add_post_close_time_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_add_post_close_time_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="배달공구 인원"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_add_post_max_person"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공구함은 깨끗한 커뮤니티 환경을 만들기 위하여 커뮤니티 이용규칙을 제정하고 있습니다. 위반 시 게시물이 삭제되고 서비스 이용이 제한될 수 있습니다." />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아래에 내용은 핵심내용에 대한 요약 사항이며, 게시물 작성 전 이용규칙을 정독하여 주시기 바랍니다." />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 정치, 사회 관련 행위 금지" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 홍보 및 판매 관련 행위 금지" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 타인의 권리를 침해하거나 불쾌감을 주는 행위 금지" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 범죄, 불법 해위 등 법령을 위반하는 행위 금지" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 욕설, 비하, 차별, 혐오, 자살, 폭력 관련 내용을 포함하는 행위 금지" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>