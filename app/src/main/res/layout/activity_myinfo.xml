<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MyInfoActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="내정보"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/myinfo_stroke_top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|left"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="이름"

                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="이름"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/myinfo_stroke_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneNumberText2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|left"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="전화번호"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/phoneNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="전화번호"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/myinfo_stroke_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/genderText2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|left"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="성별"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/genderText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="성별"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myinfo_stroke_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/accountValueText2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|left"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="계좌정보"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/accountValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|left"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="은행"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/accountText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="계좌번호"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/myinfo_stroke_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/emailText2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|left"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="이메일"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="이메일"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/myinfo_stroke_bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/birthdayText2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|left"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="생년월일"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/birthdayText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="생년월일"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>