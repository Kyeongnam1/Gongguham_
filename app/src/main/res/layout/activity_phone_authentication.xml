<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="본인확인을 위해\n인증을 진행해 주세요."
        android:textColor="#000000"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="휴대폰 번호"
        android:textColor="@color/gray_858585"
        android:textSize="12dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/user_phonenumber_edt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="+821012345678"
            android:textSize="16dp" />

        <Button
            android:id="@+id/request_auth_num_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_button"
            android:text="인증번호 요청"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="인증번호"
        android:textColor="@color/gray_858585"
        android:textSize="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/user_auth_number_edt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="숫자 6자리"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/timeOut"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:hint="남은 시간"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="11dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/phone_auth_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="인증하기"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </LinearLayout>


</LinearLayout>